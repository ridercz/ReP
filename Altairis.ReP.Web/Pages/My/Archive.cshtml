@page
@model Altairis.ReP.Web.Pages.My.ArchiveModel
@{ this.ViewBag.Title = UI.My_Index_Archive; }

<p visible="!Model.Reservations.Any()">@UI.My_Archive_NoReservations</p>

<table class="grid" visible="Model.Reservations.Any()">
    <thead>
        <tr>
            <th>@Display.ResourceId</th>
            <th>@Display.DateBegin</th>
            <th>@Display.DateEnd</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Reservations) {
            <tr>
                <th><i class="fa-solid fa-calendar-check"></i> <a asp-page="Resource" asp-route-resourceId="@item.ResourceId">@item.ResourceName</a></th>
                <td><time value="item.DateBegin"></time></td>
                <td><time value="item.DateEnd"></time></td>
                <td class="buttons">
                    <a asp-page="Index" asp-page-handler="SaveIcs" asp-route-reservationId="@item.Id" title="@UI.My_Calendar_Ics"><i class="fa-solid fa-calendar-plus"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
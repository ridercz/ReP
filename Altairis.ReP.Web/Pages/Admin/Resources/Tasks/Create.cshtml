@page "/Admin/Resources/{resourceId:int:min(1)}/Tasks/Create"
@model Altairis.ReP.Web.Pages.Admin.Resources.Tasks.CreateModel
@{ this.ViewBag.Title = string.Format(@UI.Admin_Resources_Tasks_Create_Title, this.Model.ResourceName); }
<form method="post">
    @Html.EditorFor(m => this.Model.Input)
    <footer>
        <div asp-validation-summary="All"></div>
        <input type="submit" value="@UI._Submit" />
        <a asp-page="Index" class="button secondary">@UI._Cancel</a>
    </footer>
</form>